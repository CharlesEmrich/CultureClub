
@model IEnumerable<CultureClub.Models.Movie>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<hr />
<p>
    @Html.ActionLink("Add New Movie", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Director)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th></th>
    </tr>

    @foreach (var movie in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => movie.Title) --
            </td>
            <td>
                @Html.DisplayFor(model => movie.Director) --
            </td>
            <td>
                @Html.DisplayFor(model => movie.Year) --
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = movie.MovieId })
                @Html.ActionLink("Details", "Details", new { id = movie.MovieId })
                @Html.ActionLink("Delete", "Delete", new { id = movie.MovieId })
            </td>
        </tr>
    }
</table>